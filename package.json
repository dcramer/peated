{
  "private": true,
  "name": "peated",
  "version": "0.1.0",
  "description": "",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "build": "pnpm -r --filter='./apps/**' --filter='./packages/**' run build",
    "setup": "pnpm install && npm run db:migrate",
    "dev": "nf start",
    "dev:web": "PORT=3000 API_SERVER=http://localhost:4000 dotenv -e .env.local -- pnpm --filter='./apps/web' dev",
    "dev:api": "PORT=4000 dotenv -e .env.local -- pnpm --filter='./apps/server' dev",
    "dev:worker": "dotenv -e .env.local -- pnpm --filter='./apps/worker' dev",
    "cli": "dotenv -e .env.local -- pnpm --filter='./apps/server' cli",
    "db": "dotenv -e .env.local -- pnpm --filter='./apps/server' cli db",
    "db:migrate": "dotenv -e .env.local -- pnpm --filter='./apps/server' db migrate",
    "db:generate": "dotenv -e .env.local -- pnpm --filter='./apps/server' exec drizzle-kit generate:pg",
    "bottles": "dotenv -e .env.local -- pnpm --filter='./apps/server' bottles",
    "entities": "dotenv -e .env.local -- pnpm --filter='./apps/server' entities",
    "tastings": "dotenv -e .env.local -- pnpm --filter='./apps/server' tastings",
    "mocks": "dotenv -e .env.local -- pnpm --filter='./apps/server' mocks",
    "user": "dotenv -e .env.local -- pnpm --filter='./apps/server' users",
    "scraper": "pnpm --filter './apps/worker' scraper",
    "price-scraper": "pnpm --filter './apps/worker' prices",
    "typecheck": "pnpm -r --parallel run typecheck",
    "test": "pnpm -r --stream --parallel run test",
    "test:ci": "CI=true pnpm -r run test:ci",
    "test:watch": "pnpm -r --stream --parallel run test:watch",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache ."
  },
  "author": "David Cramer",
  "license": "Apache-2.0",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "foreman": "^3.0.1",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.4",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "publint": "^0.2.7",
    "simple-git-hooks": "^2.10.0"
  },
  "engines": {
    "node": "20"
  },
  "packageManager": "pnpm@8.14.3+sha256.2d0363bb6c314daa67087ef07743eea1ba2e2d360c835e8fec6b5575e4ed9484",
  "volta": {
    "node": "20.11.1",
    "pnpm": "8.14.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "{apps,packages}/**/*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@spotlightjs/spotlight": "^1.2.13"
  }
}
