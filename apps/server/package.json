{
  "private": true,
  "name": "@peated/server",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "cli": "esno --require dotenv/config ./src/cli/index.ts",
    "dev": "esno watch --require dotenv/config ./src/server.ts",
    "start": "esno --transpile-only --require dotenv/config ./src/server.ts",
    "typecheck": "tsc --noEmit --incremental",
    "test": "dotenv -e .env.test -- vitest watch --no-threads",
    "test:watch": "dotenv -e .env.test -- vitest --no-threads",
    "test:ci": "dotenv -e .env.test -- vitest --no-threads --coverage --reporter=junit --reporter=default --outputFile=junit.xml"
  },
  "exports": {
    "./*.ts": "./src/*.ts",
    "./*": [
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/one-line-logger": "^1.2.0",
    "@google-cloud/storage": "^6.12.0",
    "@opentelemetry/api": "^1.8.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@peated/design": "workspace:*",
    "@peated/tsconfig": "workspace:*",
    "@sentry/core": "^7.106.1",
    "@sentry/node-experimental": "^7.106.1",
    "@sentry/utils": "^7.106.1",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.26",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.2",
    "@vitest/coverage-v8": "^0.34.6",
    "bcrypt": "^5.1.1",
    "commander": "^10.0.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.5",
    "esno": "^4.7.0",
    "faktory-worker": "^4.5.1",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "form-data-encoder": "^3.0.1",
    "formdata-node": "^5.0.1",
    "google-auth-library": "^8.9.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mime-types": "^2.1.35",
    "nanoid": "^3.3.7",
    "nodemailer": "^6.9.12",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "regenerator-runtime": "^0.14.1",
    "sharp": "^0.33.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^0.34.6",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
