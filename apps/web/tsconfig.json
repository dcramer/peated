{
  "extends": "@peated/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mts"],
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./*"],
      "@peated/web/*": ["./app/*"],
      "@peated/server/*": ["../../apps/server/src/*"]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
