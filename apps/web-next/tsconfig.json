{
  "extends": "@peated/tsconfig/tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/favorites/layout.tsx.old"
  ],
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": ".",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@peated/web/*": ["./src/*"],
      "@peated/server/*": ["../../apps/server/src/*"]
    },
    "noEmit": true,
    "module": "esnext"
  },
  "exclude": ["node_modules"]
}
