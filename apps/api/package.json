{
  "private": true,
  "name": "api",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --require dotenv/config ./src/server.ts",
    "db": "ts-node --require dotenv/config ./src/bin/db.ts",
    "db:migrate": "ts-node --require dotenv/config ./src/bin/db.ts migrate",
    "bottles": "ts-node --require dotenv/config ./src/bin/bottles.ts",
    "entities": "ts-node --require dotenv/config ./src/bin/entities.ts",
    "tastings": "ts-node --require dotenv/config ./src/bin/tastings.ts",
    "mocks": "ts-node --require dotenv/config ./src/bin/mocks.ts",
    "user": "ts-node --require dotenv/config ./src/bin/user.ts",
    "start": "ts-node --transpile-only --require dotenv/config ./src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "dotenv -e .env.test -- vitest --no-threads",
    "test:ci": "dotenv -e .env.test -- vitest --no-threads --coverage --reporter=junit --reporter=default --outputFile=junit.xml"
  },
  "dependencies": {
    "@faker-js/faker": "^8.2.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/one-line-logger": "^1.2.0",
    "@google-cloud/storage": "^6.12.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@peated/design": "workspace:*",
    "@peated/shared": "workspace:*",
    "@peated/tsconfig": "workspace:*",
    "@sentry/node-experimental": "^7.76.0",
    "@sentry/profiling-node": "^1.2.1",
    "@sentry/utils": "^7.76.0",
    "@types/bcrypt": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mime-types": "^2.1.3",
    "@types/node": "^18.18.7",
    "@types/nodemailer": "^6.4.13",
    "@types/pg": "^8.10.7",
    "@vitest/coverage-v8": "^0.34.6",
    "bcrypt": "^5.1.1",
    "commander": "^10.0.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "esbuild": "^0.19.5",
    "esbuild-node-tsc": "^2.0.5",
    "faktory-worker": "^4.5.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "form-data-encoder": "^3.0.1",
    "formdata-node": "^5.0.1",
    "google-auth-library": "^8.9.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mime-types": "^2.1.35",
    "nanoid": "^3.3.6",
    "nodemailer": "^6.9.7",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "pino-pretty": "^10.2.3",
    "regenerator-runtime": "^0.14.0",
    "sharp": "^0.32.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.21.4"
  }
}
