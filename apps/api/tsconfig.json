{
  "extends": "@peated/tsconfig/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["node", "vitest/globals", "./src/global.d.ts"],
    "moduleResolution": "Node",
    "composite": true,
    "paths": {
      "@peated/api/*": ["./src/*"],
      "@peated/server/*": ["../server/src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
